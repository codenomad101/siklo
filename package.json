{
  "name": "mantramanthan-web",
  "version": "1.0.0",
  "description": "enMantra Web Application - Monorepo",
  "type": "module",
  "scripts": {
    "dev": "npm run build:client && NODE_ENV=development nodemon --watch server --ext ts,tsx,js,json --exec \"tsx --require dotenv/config server/src/index.ts\"",
    "build": "npx --yes vite build && npx --yes esbuild server/src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "build:client": "npx --yes vite build",
    "build:server": "npx --yes esbuild server/src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@ant-design/icons": "^5.2.0",
    "@tanstack/react-query": "^5.0.0",
    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.4",
    "esbuild": "^0.19.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8"
  }
}
